<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_gray_stroke_rounded_12">

    <ImageView
        android:id="@+id/snack_icon_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_bike_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/darker_gray" />

    <TextView
        android:id="@+id/snack_icon_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="@string/icon_snack_title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/snack_icon_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="@string/icon_snack_subtitle"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/snack_icon_iv"
        app:layout_constraintTop_toBottomOf="@id/snack_icon_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>